{
	"compileOnSave": true,
	"compilerOptions": {
		"jsx": "react",
		"strict": true,
		"pretty": false,
		"lib": ["es6", "DOM", "es2019"],
		"target": "es5",
		"sourceMap": true,
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"isolatedModules": false,
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"removeComments": true,
		"noImplicitAny": true,
		"strictNullChecks": true
	}
}
